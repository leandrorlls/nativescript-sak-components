<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page" 
  xmlns:sak="nativescript-sak-components">
  <GridLayout rows="auto,auto,auto,auto,auto,auto">
    <Label row="0" text="SakTextField"></Label>
    <sak:SakTextField class="test-class" hint="Testing Testing Testing Testing Testing Testing Testing Testing Testing Testing" hintColor="996633" maxLength="15" ellipsize="true" regex="[a-zA-Z',.-]+">
    </sak:SakTextField>

    <Label row="2" text="SakTextInputLayout"></Label>
    <ios>
      <Label row="2" text="SakTextInputLayout"></Label>
      <sak:SakTextInputLayout row="3" hint="Start Hint" title="Floating Hint">
      </sak:SakTextInputLayout>
    </ios>
    <android>
      <sak:SakTextInputLayout row="3" hintTextAppearance="TextInputLayoutStyle" height="80">
        <sak:SakTextField row="1" hint="Testing Testing Testing Testing Testing Testing Testing Testing Testing Testing" hintColor="996633" maxlength="15" ellipsize="true" color="9900cc" regex="[a-zA-Z',.-]+">
        </sak:SakTextField>
      </sak:SakTextInputLayout>
    </android>
  </GridLayout>
</Page>