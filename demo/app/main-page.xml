<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page" 
  xmlns:sak="nativescript-sak-components">
  <GridLayout rows="auto,auto,auto,auto,auto,auto">
    <Label row="0" text="SakTextField"></Label>
    <sak:SakTextField 
      class="test-class"
      row="1" 
      hint="Testing Testing Testing Testing Testing Testing Testing Testing Testing Testing" 
      hintColor="996633" 
      maxlength="15" 
      ellipsize="true" 
      regex="[a-zA-Z',.-]+">
    </sak:SakTextField>

    <Label row="2" text="SakTextInputLayout"></Label>
    <sak:SakTextInputLayout row="3" hintTextAppearance="TextInputLayoutStyle" height="80">
      <sak:SakTextField 
        row="1" 
        hint="Testing Testing Testing Testing Testing Testing Testing Testing Testing Testing" 
        hintColor="996633" 
        maxlength="15" 
        ellipsize="true" 
        color="9900cc" 
        regex="[a-zA-Z',.-]+">
      </sak:SakTextField>
    </sak:SakTextInputLayout>

    <Label row="4" text="Real TextInputLayout"></Label>

    <sak:SakTextInputLayout row="5" hintTextAppearance="TextInputLayoutStyle" height="48">
      <sak:SakTextField
        backgroundColor="ffffff"
        maxlength="100"  
        regex="[a-zA-Z0-9',.-]+"
        ellipsize="true" 
        hint="Postcode, Eircode, or address" 
        font="Arvo-Bold.ttf"
        textSize="18"
        color="393336">
      </sak:SakTextField>
    </sak:SakTextInputLayout>
  </GridLayout>
</Page>